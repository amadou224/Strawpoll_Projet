@using Strawpoll_Projet.Models
@model Sondage
@{
    /**/

    ViewBag.Title = "ContactUs";
}

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>contact</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
</head>
<body>
    <h1 style="text-align:center; margin-top:3% "> PAGE DE VOTE DU SONDAGE </h1>
      <form style="margin-left:20%; margin-right:20% ; margin-top:2%" method="get" action="@Url.Action("InsererVoteBDD",new{idSondage=Model.ID})">  <!--Modification pour recuper mon vote-->       

        <input class="form-control" type="text" value="@Model.Questions" placeholder="" readonly>
        <div class="form-group form-check" style="margin-top:3%">
         


                @if (Model.Choix == false)
                {
                    <div>
                        <input type="radio" name="onechoose" class="form-check-input" id="exampleCheck1" />
                        <label class="form-check-label" for="exampleCheck1">@Model.Reponse1</label>
                    </div>
                    <div>
                        <input type="radio" name="onechoose" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">@Model.Reponse2</label>
                    </div>
                    <div>
                        <input type="radio" name="onechoose" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">@Model.Reponse3</label>
                    </div>
                }
                else
                {
                    <div>

                        <input type="checkbox" name="choix1" class="form-check-input" id="exampleCheck1" />
                        <label class="form-check-label" for="exampleCheck1">@Model.Reponse1</label>
                    </div>

                    <div>
                        <input type="checkbox" name="choix2" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">@Model.Reponse2</label>

                    </div>

                    <div>
                        <input type="checkbox" name="choix3" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">@Model.Reponse3</label>
                    </div>

                }


        </div>

        <input type="submit" value=" VOTE" >

                   </form>        

    <footer style="margin-top:20%">
        <p style="text-align:center">Copyright &copy; @DateTime.Now.Year  \BAH-AMADOU-BAILO\ SONDAGE-CCI CAMPUS COLMAR ALSACE </p>

    </footer>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

</body>
</html>




