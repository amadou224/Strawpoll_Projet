@using Strawpoll_Projet.Models
@model Sondage
@{
    /**/

    ViewBag.Title = "ContactUs";
}

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>VOTE</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
</head>
<body>
    <h1 style="text-align:center; margin-top:3% "> PAGE DE VOTE DU SONDAGE </h1>
     
        <input class="form-control" type="text" style="margin-right:20% ; margin-left:20%" value="@Model.Questions" placeholder="" readonly>
        <div class="form-group form-check" style="margin-top:5%">



            @if (Model.Choix == false)

            {
                <form style="margin-left:20%; margin-right:20% ; margin-top:2%" method="get" action="@Url.Action("VoteSimple")">
                    <!--Modification pour recuperer mon vote-->

                    <div>
                        <input type="radio" name="onechoose" value="Choix1" class="form-check-input" id="exampleCheck1" />
                        <label class="form-check-label" for="exampleCheck1">@Model.Reponse1</label>
                    </div><br />
                    <div>
                        <input type="radio" name="onechoose" value="Choix2" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">@Model.Reponse2</label>
                    </div><br />
                    <div>
                        <input type="radio" name="onechoose" value="Choix3" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">@Model.Reponse3</label>
                    </div><br />
                    <input type="hidden" name="idSondage" value="@Model.ID" />
                    <input type="submit" value=" VOTE">

                </form>
            }
            else
            {
                <form style="margin-left:20%; margin-right:20% ; margin-top:2%" method="get" action="@Url.Action("VoteMultiple")">
                    <div>

                        <input type="checkbox" name="choix1" class="form-check-input" id="exampleCheck1" />
                        <label class="form-check-label" for="exampleCheck1">@Model.Reponse1</label>
                    </div>
                    <br />
                    <div>
                        <input type="checkbox" name="choix2" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleheck1">@Model.Reponse2</label>

                    </div>
                    <br />
                    <div>
                        <input type="checkbox" name="choix3" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">@Model.Reponse3</label>
                    </div>
                    <input type="hidden" name="idSondage" value="@Model.ID" /><br />
                    <input type="submit" value=" VOTE">

                </form>

            }
            <form>
                <div class="row">
                    <p class="col">   </p>
                    <div class="col">
                        <fieldset style="text-align:center">
                            <a href="@Url.Action("PageDeGarde")" class="btn btn-primary textall">Accueil</a>
                        </fieldset>
                    </div>
                    <p class="col">   </p>
                    <div class="col">
                        <fieldset style="text-align:center">
                            <a href="@Url.Action("ResultatVote", new { idSondage = Model.ID })" class="btn btn-primary  ">Résultat</a>
                        </fieldset>
                    </div>
                    <p class="col">   </p>
                </div>
            </form>

        </div>

     

                         

    <footer style="margin-top:13%">
        <p style="text-align:center">Copyright &copy; @DateTime.Now.Year  \BAH-AMADOU-BAILO\ SONDAGE-CCI CAMPUS COLMAR ALSACE </p>

    </footer>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

</body>
</html>




